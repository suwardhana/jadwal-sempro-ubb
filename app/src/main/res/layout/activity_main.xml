<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/img_logo_ubabel" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="launchSempro"
                android:text="Jadwal Sempro" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="launchSemhas"
                android:text="Jadwal Semhas" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:onClick="launchPendadaran"
                android:text="Jadwal Pendadaran" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
